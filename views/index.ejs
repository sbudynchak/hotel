                <label for="room_type">Оберіть номер:</label><br>
        </div>
    <form action="/users" method="POST" id="bookingform">
        <div class="answers">
                <input type="date" id="arrival" name="arrival" required><br>
                <input type="date" id="departure" name="departure" required><br>
            <input type="text" id="name" name="name" required pattern="[А-ЯІЇЄа-яіїєA-Za-z]+"><br>
            <input type="text" id="surname" name="surname" required pattern="[А-ЯІЇЄа-яіїєA-Za-z]+"><br>
            <input type="tel" id="phone" name="phone" required pattern="\+380\d{9}" placeholder="+380" title="Please enter a 9-digit phone number"><br>
                <select id="room_type" name="room_type" required>
                  <option value="roomone">Одномісний</option>
                  <option value="roomtwo">Двомісний</option>
                  <option value="roomthree">Твін</option>
                  <option value="roomfour">Напівлюкс</option>
                </select><br>
        </div>
        <input type="submit" id="subbtn" class="reserve" style="margin-left:30px;">

    </form>
    <script>
    var adate;
        document.getElementById("arrival").addEventListener("change", function() {
            var currentDate = new Date();
            var futureDate = new Date();
            futureDate.setFullYear(futureDate.getFullYear() + 2);
            var selectedDate = new Date(document.getElementById("arrival").value);
            adate=selectedDate;
            if (selectedDate > futureDate || selectedDate < currentDate) {
                document.getElementById("arrival").setCustomValidity("Оберіть іншу дату");
            } else {
                document.getElementById("arrival").setCustomValidity("");
            }
        });
        document.getElementById("departure").addEventListener("change", function() {
            var currentDate = new Date();
            var futureDate = new Date();
            futureDate.setFullYear(futureDate.getFullYear() + 2);
            var selectedDate = new Date(document.getElementById("departure").value);

            if (selectedDate > futureDate || selectedDate < currentDate || selectedDate<adate) {
                document.getElementById("departure").setCustomValidity("Оберіть іншу дату");
            } else {
                document.getElementById("departure").setCustomValidity("");
            }
        });
